public class Neighborhood{
    private int numHouses;
    private House[] houses;

    public Neighborhood(){
        this.numHouses = 0;
        House[] hArr = new House[5];
        this.houses = hArr;
    }

    public Neighborhood(House[] houses){
        this.numHouses = 0;
        this.houses = houses;
    }
    public static void main(String[] args){
        System.out.println("hi");
    }
    public void displayNewHouses(int year){
        for(House house : this.houses){
            String renovated = "";
            if(house.getIsRenovated() == true){
                renovated = "has";
            }
            else{
                renovated = "has not";
            }
            if(house.getYearBuilt() == year) {
                System.out.println("House located at " + house.getAddress() + " was built in " + house.getYearBuilt() + ", has " + house.getNumBaths() + " number of bathrooms, and " + renovated + " been renovated recently.");
            }
        }
    }
    public House addHouse(int index, House new_house){
        //House new_house = new House();
        if(index >= this.houses.length){
            return null;
        }
        if(this.houses[index] == null){
            this.houses[index] = new_house;
            return null;
        }
        else if(index < this.houses.length){
            House old_house = this.houses[index];
            this.numHouses += 1;
            this.houses[index] = new_house;
            return old_house;
        }
        else{
            return null;
        }
    }
